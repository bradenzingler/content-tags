{
  "name": "content-tagging",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack && stripe listen --forward-to localhost:3000/api/stripe_webhook",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test-lambda": "cd backend/lambda/src && go test",
    "build-lambda": "npm run test-lambda && cd backend/lambda/src && mkdir -p dist && GOOS=linux GOARCH=amd64 go build -o dist/bootstrap -ldflags='-s -w' $(find . -name '*.go' ! -name '*_test.go') && cd dist/ && zip bootstrap.zip bootstrap && cd -",
    "deploy-lambda": "npm run build-lambda && aws lambda update-function-code --function-name content-tags --zip-file fileb://backend/lambda/src/dist/bootstrap.zip"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.788.0",
    "@clerk/nextjs": "^6.16.0",
    "highlight.js": "^11.11.1",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.15.3",
    "stripe": "^18.0.0",
    "svix": "^1.64.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-icons": "^2.2.7",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^6.3.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  }
}
